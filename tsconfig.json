{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015"],
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "lib",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["*/**/*.spec.ts", "./dist"]
}
